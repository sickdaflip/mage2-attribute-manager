<?php
/**
 * @var \FlipDev\AttributeManager\Block\Adminhtml\Dashboard\SetOverview $block
 */
$distribution = $block->getSetDistribution();
?>
<div class="admin__page-section-title">
    <span class="title"><?= $block->escapeHtml(__('Attribute Set Distribution')) ?></span>
</div>
<div class="admin__data-grid-wrap">
    <?php if (empty($distribution)): ?>
        <p><?= $block->escapeHtml(__('No data available.')) ?></p>
    <?php else: ?>
        <table class="data-grid">
            <thead>
                <tr>
                    <th><?= $block->escapeHtml(__('Attribute Set')) ?></th>
                    <th><?= $block->escapeHtml(__('Product Count')) ?></th>
                    <th><?= $block->escapeHtml(__('Percentage')) ?></th>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($distribution as $set): ?>
                    <tr>
                        <td><?= $block->escapeHtml($set['name'] ?? 'Unknown') ?></td>
                        <td><?= $block->escapeHtml($set['count'] ?? 0) ?></td>
                        <td><?= $block->escapeHtml(number_format($set['percentage'] ?? 0, 1)) ?>%</td>
                    </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
    <?php endif; ?>
</div>
