                    <th><?= $block->escapeHtml(__('Average Fill Rate')) ?></th>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($fillRatesBySet as $set): ?>
                    <tr>
                        <td><?= $block->escapeHtml($set['name'] ?? 'Unknown') ?></td>
                        <td><?= $block->escapeHtml($set['product_count'] ?? 0) ?></td>
